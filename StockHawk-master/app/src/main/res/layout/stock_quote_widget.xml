<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/widget_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_semi_transparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_500"
            android:orientation="horizontal"
            android:padding="@dimen/widget_header_padding"
            >
            <ImageView
                android:id="@+id/widget_img_launcher"
                android:layout_width="@dimen/widget_app_icon_width"
                android:layout_height="@dimen/widget_app_icon_height"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/stockhawk_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_header"
                android:layout_gravity="center|start"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:paddingStart="@dimen/widget_header_padding"
                android:paddingLeft="@dimen/widget_header_padding"
                android:paddingEnd="@dimen/widget_header_padding"
                android:paddingRight="@dimen/widget_header_padding"/>
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/refresh_white"
                android:elevation="24dp"
                android:layout_gravity="end"
                />-->
        </LinearLayout>
        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_item_quote"
            >
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/widget_empty_view"
            android:layout_height="match_parent"
            android:text="@string/empty_widget_view"
            style="@style/WidgetEmptyViewStyle"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone"
            />

    </LinearLayout>

</FrameLayout>