<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/BaseLayoutStyle">

        <android.support.v7.widget.CardView
            android:id="@+id/detail_Card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="70%"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/chart_card_view_margin"
            android:elevation="@dimen/chart_card_view_elevation">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historicDataChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stock_details_linear_layout"
            android:orientation="horizontal"
            android:layout_below="@id/detail_Card_view"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/detail_padding"
                android:paddingRight="@dimen/detail_padding"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Bid_price_detail"
                    style="@style/DetailTextStyle"
                    android:contentDescription="@string/detail_bid_price"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date"
                    style="@style/DetailTextStyle"
                    android:contentDescription="@string/detail_start_date"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date"
                    style="@style/DetailTextStyle"
                    android:contentDescription="@string/detail_end_date"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/detail_padding"
                android:paddingLeft="@dimen/detail_padding"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bid_price_detail"
                    android:text="@string/Bid_price_detail"
                    style="@style/DetailTextStyle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_date_detail"
                    android:text="@string/start_date"
                    style="@style/DetailTextStyle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_date_detail"
                    android:text="@string/end_date"
                    style="@style/DetailTextStyle"
                    />
            </LinearLayout>

        </LinearLayout>
</android.support.percent.PercentRelativeLayout>
    
    


