<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat">
      <item name="colorPrimary">@color/teal_500</item>
      <item name="colorPrimaryDark">@color/teal_700</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="PercentChangeTextStyle">
    <item name="android:textSize">@dimen/percent_change_text_size</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="BidPriceTextStyle">
    <item name="android:textSize">@dimen/bid_price_text_size</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="StockSymbolTextStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/stock_symbol_text_size</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="StockNameStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/stock_name_text_size</item>
  </style>

  <style name="BaseLayoutStyle">
      <item name="android:background">@color/grey_800</item>
  </style>

  <style name="EmptyViewStyle">
    <item name="android:textColor">@color/grey_500</item>
    <item name="android:textSize">@dimen/empty_view_text_size</item>
    <item name="android:padding">@dimen/empty_view_text_padding</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center_horizontal|center_vertical</item>
  </style>

  <style name="DetailTextStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/detail_text_size</item>
    <item name="android:paddingBottom">@dimen/detail_text_padding_bottom</item>
  </style>

  <style name="WidgetEmptyViewStyle">
    <item name="android:textSize">@dimen/empty_view_text_size</item>
    <item name="android:textColor">@color/white</item>
  </style>
</resources>
